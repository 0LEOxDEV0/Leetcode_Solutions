class Solution {
    public int minSubArrayLen(int target, int[] nums) {
        
        int ans= Integer.MAX_VALUE;
        int curr=0;
        int i=0, j=0, n= nums.length;

        while(j<n){
            curr+= nums[j];
            j++;

            while(curr>= target){
                ans= Math.min(ans, j-i);
                curr-= nums[i];
                i++;
            }
            
        }
        return ans==Integer.MAX_VALUE ? 0 : ans;
    }
}
