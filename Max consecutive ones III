class Solution {
    public int longestOnes(int[] nums, int k) {
        int i=0, j=0;
        int window=0;
        int zerocount=0;

        while(j < nums.length){
            if(nums[j]==0){
                zerocount++;
            }

            while(zerocount >k){
                if(nums[i]==0)
                zerocount--;
                i++;
            }
            j++;
            window = Math.max(window, j-i);
        }
        return window;
    }
}
